@model List<fitPass.Models.CoachTime>

@{
    ViewData["Title"] = "選擇預約時段";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>預約 @ViewBag.Date.ToString("yyyy-MM-dd")</h2>

<form method="post" action="/Reservation/SubmitReservation">
    @foreach (var slot in Model)
    {
        <div>
                <input type="radio" name="timeId" value="@slot.TimeId" id="@slot.TimeSlot" />
                <label for="@slot.TimeSlot"> @($"{slot.TimeSlot + 5:00}:00 ~ {slot.TimeSlot + 6:00}:00") </label>
            </div>
    }

    <button type="submit">確認預約</button>
</form>
