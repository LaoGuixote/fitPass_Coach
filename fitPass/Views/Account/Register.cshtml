@{
    ViewData["Title"] = "註冊帳號";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>FitPass - 註冊</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #f2f2f2;">
    <div class="container text-center" style="max-width: 380px; margin: auto; padding-top: 60px;">

        <h1 class="fw-bold text-success mb-4" style="font-size: 38px;">FitPass</h1>
        <h5 class="mb-3">創建帳號</h5>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post">
            <input type="email" name="email" class="form-control" placeholder="信箱" required />
            <input type="password" name="password" class="form-control mt-2" placeholder="密碼" required />
            <input type="password" name="confirmPassword" class="form-control mt-2" placeholder="確認密碼" required />
            <input type="text" name="name" class="form-control mt-2" placeholder="姓名" required />
            <input type="tel" name="phone" class="form-control mt-2" placeholder="電話" required />
            <button type="submit" class="btn btn-success w-100 mt-3">創建帳號</button>
        </form>


        <p class="mt-4 text-muted">
            已經有帳號？
            <a href="/Account/Login" class="text-success fw-bold">點我登入</a>
        </p>
    </div>
</body>
</html>
